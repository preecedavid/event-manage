<%= form_with(model: event, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.text_field :start_time, value: l(event.start_time), class: 'form-control', type: 'datetime-local' %>
  </div>

  <div class="form-group">
    <%= form.label :end_time %>
    <%= form.text_field :end_time, value: l(event.end_time), class: 'form-control', type: 'datetime-local' %>
  </div>

  <div class="form-group">
    <%= form.label :client_id %>
    <%= form.collection_select(:client_id, Client.all, :id, :name, {}, { class: 'form-control', data: { controller: 'select' } }) %>
  </div>

  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
