<%= form_with(model: event, data: { controller: 'validation' }) do |form| %>
  <div class="row">
    <div class="col-5">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control', tabindex: 1 %>
      </div>
    </div>
    <div class="col-5">
      <div class="form-group">
        <%= form.label :client_id %>
        <%= form.collection_select(:client_id, Client.all, :id, :name, {}, { class: 'form-control', data: { controller: 'select' } }) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-5">
      <div class="form-group">
        <%= form.label :start_time %>
        <%= form.text_field :start_time, value: l(event.start_time), class: 'form-control', type: 'datetime-local', tabindex: 2 %>
      </div>
    </div>
    <div class="col-5">
      <div class="form-group">
        <label>Tags (TBD)</label>
        <input type="text" class="form-control inputtags">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-5">
      <div class="form-group">
        <%= form.label :end_time %>
        <%= form.text_field :end_time, value: l(event.end_time), class: 'form-control', type: 'datetime-local', tabindex: 3 %>
      </div>
    </div>
    <div class="col-5">
      <div class="form-group">
        <label>Event Main Entrance (TBD)</label>
        <input type="text" class="form-control inputtags">
      </div>
    </div>
  </div>



  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
