<div class="table-responsive">
  <table class="table table-striped table-md">
    <thead>
      <tr>
        <th>Name</th>
        <th>Token</th>
        <th>Label</th>
        <th>Type</th>
        <th>Content</th>
        <th>Tags</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% tokens.each do |token| %>
        <% hotspot = token.hotspot(event_id: event.id) %>
        <% if hotspot.nil? %>
          <%= render 'hotspot_create', token: token, room: room %>
        <% else %>
          <%= render 'hotspot_details', hotspot: hotspot, token: token, room: room %>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
