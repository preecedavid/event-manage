<section class="section">
  <div class="section-header d-mobile-none">
    <h1>
      <%= @event.name %>
    </h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Events', events_path %></div>
      <div class="breadcrumb-item">Show Event</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Event Parameters</h4>
        <div class="card-header-action">
          <%= link_to icon('fas fa-database', 'Publish'), publish_event_path(id: @event.id), class: 'btn btn-icon icon-left btn-primary', method: :post, remote: true %>
        </div>
      </div>
      <div class="card-body">
        <ul class="nav nav-tabs" id="myTab2" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="home-tab2" data-toggle="tab" href="#home2" role="tab" aria-controls="home" aria-selected="true">Details</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="profile-tab2" data-toggle="tab" href="#profile2" role="tab" aria-controls="profile" aria-selected="false">Attendees</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="contact-tab2" data-toggle="tab" href="#permissions" role="tab" aria-controls="contact" aria-selected="false">Permissions</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="contact-tab2" data-toggle="tab" href="#rooms" role="tab" aria-controls="contact" aria-selected="false">Rooms</a>
          </li>
        </ul>
        <div class="tab-content tab-bordered" id="myTab3Content">
          <div class="tab-pane fade show active" id="home2" role="tabpanel" aria-labelledby="home-tab2">
            <%= render 'form', event: @event %>
          </div>
          <div class="tab-pane fade" id="profile2" role="tabpanel" aria-labelledby="profile-tab2">
            <%= render 'attendees', event: @event %>
          </div>
          <div class="tab-pane fade" id="permissions" role="tabpanel" aria-labelledby="contact-tab2">
            TBD
          </div>
          <div class="tab-pane fade" id="rooms" role="tabpanel" aria-labelledby="contact-tab2">
            <%= render 'rooms', rooms: @rooms %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-arrow-left', 'Back'), events_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<%= render 'add_content_modal_form', event: @event %>

<% content_for(:page_title, 'Show Event') %>
