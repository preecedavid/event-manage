<%= form_with(model: content, data: { controller: 'validation' }) do |form| %>
  <div class="row">
    <div class="form-group col-10">
      <%= form.label :tag_list %>
      <%= form.text_field :tag_list, class: 'form-control', data: { role: 'tagsinput' } %>
    </div>

  </div>

  <div class="row">
    <div class="form-group col-5">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group col-5">
      <%= form.label :file, 'Choose File' %>
      <%= form.file_field :file, label: 'Report', class: 'form-control' %>
    </div>
  </div>

  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
