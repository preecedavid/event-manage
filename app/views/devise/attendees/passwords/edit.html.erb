<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-6 offset-xl-3">
      <div class="login-brand">
        <%= image_tag 'stisla.svg', alt: 'logo', width: 100, class: 'shadow-light rounded-circle' %>
      </div>

      <div class="card card-primary">
        <div class="card-header">
          <h4>Reset Password</h4>
        </div>

        <div class="card-body">
          <% resource.errors.full_messages.each do |text| %>
            <div class="alert alert-danger alert-dismissible show fade">
              <div class="alert-body">
                <button class="close" data-dismiss="alert">
                  <span>Ã—</span>
                </button>
                <%= text %>
              </div>
            </div>
          <% end %>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

            <%= f.input :reset_password_token, as: :hidden %>

            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', required: true, type: :password, placeholder: 'New password', autofocus: true, tabindex: 1 %>
              <div class="invalid-feedback">
                please fill in your password
              </div>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', required: true, placeholder: 'Confirm new password', type: :password, tabindex: 2 %>
              <div class="invalid-feedback">
                please fill in your password
              </div>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                Change my password
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
