<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
      <div class="login-brand">
        <%= image_tag 'stisla.svg', alt: 'logo', width: 100, class: 'shadow-light rounded-circle' %>
      </div>

      <div class="card card-primary">
        <div class="card-header"><h4>Login</h4></div>

        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', autocomplete: 'off' }) do |f| %>

            <div class="form-group">
              <%= f.label :email, class: 'control-label' %>
              <%= f.text_field :email, class: 'form-control', required: true, autofocus: true, type: :email, tabindex: 1 %>
              <div class="invalid-feedback">
                Please fill in your email
              </div>
            </div>

            <div class="form-group">
              <div class="d-block">
                <%= f.label :password, class: 'control-label' %>
                <div class="float-right">
                  <%= link_to 'Forgot Password?', new_user_password_path(resource_name), class: 'text-small' %>
                </div>
              </div>
              <%= f.password_field :password, class: 'form-control', required: true, type: :password, tabindex: 2 %>
              <div class="invalid-feedback">
                please fill in your password
              </div>
            </div>

            <div class="form-group">
              <div class="custom-control custom-checkbox">
                <input type="checkbox" name="remember" class="custom-control-input" tabindex="3" id="remember-me">
                <label class="custom-control-label" for="remember-me">Remember Me</label>
              </div>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                Login
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
